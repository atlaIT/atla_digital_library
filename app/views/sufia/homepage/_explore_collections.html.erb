<section>
  <div class="container">
    <div class="row">
      <% @admin_sets.each do |admin_set| %>
        <div class="col-md-4">
          <div class="thumbnail-custom">
            <h4 class="thumbnail-heading">
              <%= link_to [sufia, admin_set] do %>
                <%= admin_set.title_or_label %>
              <% end %></h4>
            <div class="overlay"></div>
            <%= link_to [sufia, admin_set], class: '', 'aria-hidden' => true do %>
              <%= render_thumbnail_tag admin_set, { class: 'img-responsive feature-image' }, { suppress_link: true } %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<ul class="list-inline collection-highlights-list">
  <li>
    <%= link_to t('sufia.homepage.admin_sets.link'), sufia.admin_sets_path, class: 'btn btn-default' %>
  </li>
</ul>
